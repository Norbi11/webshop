<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
		
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
		<property name="hibernate.connection.password">password</property>
		<property name="hibernate.connection.url">jdbc:derby://localhost:1527/webshopDB;create=true</property>
		<property name="hibernate.connection.user">user</property>
		<property name="hibernate.connection.default_schema">APP</property>
		<property name="hibernate.connection.dialect">org.hibernate.dialect.DerbyDialect</property>
		<property name="hibernate.connection.show_sql">true</property>
		
		<property name="current_session_context_class">thread</property>
		
		<mapping class="com.shop.webshop.dom.Users"/>
		<mapping class="com.shop.webshop.dom.Products"/>
		<mapping class="com.shop.webshop.dom.Stock"/>
		<mapping class="com.shop.webshop.dom.Orderitems"/>
		<mapping class="com.shop.webshop.dom.Orders"/>
		
	</session-factory>
</hibernate-configuration>